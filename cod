    .setColor([254, 0, 107])
    .setThumbnail(message.author.avatarURL)
    .addField(":pencil: Pergunta", question)
    .addField(":books: Resposta", replies[result])
    .setFooter(`ğŸš€ ${bot.user.username}`, bot.user.avatarURL);

    message.channel.send(embed);
}

